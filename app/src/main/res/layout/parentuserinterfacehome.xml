<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parentUserInterfaceHome">

    <!-- TOP TITLE -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMART AIR - PARENT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- FIRE ICON -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="95dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fire_f" />

    <!-- TODAY ZONE CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/zoneCard"
        android:layout_width="221dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:contentPadding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/todaysZoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Zone: Green"
            android:gravity="center"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- LAST RESCUE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/lastRescueCard"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:contentPadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/zoneCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/manageChildrenCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Rescue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lastRescueTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:30 PM"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- MANAGE CHILDREN -->
    <androidx.cardview.widget.CardView
        android:id="@+id/manageChildrenCard"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:contentPadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/zoneCard"
        app:layout_constraintStart_toEndOf="@+id/lastRescueCard"
        app:layout_constraintEnd_toStartOf="@+id/weeklyRescueCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Manage Children"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_purple"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- WEEKLY RESCUE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/weeklyRescueCard"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:contentPadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/zoneCard"
        app:layout_constraintStart_toEndOf="@+id/manageChildrenCard"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Count"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/weeklyRescueCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- TREND LABEL -->
    <TextView
        android:id="@+id/trendLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trend (7 days)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lastRescueCard"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- TOGGLE -->
    <ToggleButton
        android:id="@+id/trendToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="7 days"
        android:textOn="30 days"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lastRescueCard"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUTTON 2 — MEDICATION -->
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Medication Management"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/trendLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUTTON 3 — SYMPTOM REPORTS -->
    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Symptom Reports"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUTTON 4 — EMERGENCY CONTACTS -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Emergency Contacts"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUTTON 5 — SETTINGS -->
    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Settings"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLogout"/>

    <!-- LOGOUT BUTTON -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Logout"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


