<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".providerUserInterfaceHome">

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMART AIR - PROVIDER"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Icon -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="95dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fire_f" />

    <!-- Shared Patients Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sharedPatientsCard"
        android:layout_width="221dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:contentPadding="12dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/sharedPatientsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Shared Patients: 0" />
    </androidx.cardview.widget.CardView>

    <!-- Read-only notice (now correctly constrained below the CARD, not the inner text) -->
    <TextView
        android:id="@+id/readOnlyNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Read-Only Access - View Only"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/sharedPatientsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section title -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PROVIDER DASHBOARD"
        app:layout_constraintTop_toBottomOf="@id/readOnlyNotice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shared Patients (Read-Only) -->
    <Button
        android:id="@+id/button"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Shared Patients (Read-Only)"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Treatment Plans -->
    <Button
        android:id="@+id/button2"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:text="Treatment Plans"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Progress Reports -->
    <Button
        android:id="@+id/button3"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:text="Progress Reports"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Medication Prescriptions -->
    <Button
        android:id="@+id/button4"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:text="Medication Prescriptions"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Analytics Dashboard -->
    <Button
        android:id="@+id/button5"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:text="Analytics Dashboard"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- View Report -->
    <Button
        android:id="@+id/button6"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:text="View Report"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logout (used by providerUserInterfaceHome.java) -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


