<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Symptom Report"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Child"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/reportChildSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Date (YYYY-MM-DD)"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reportDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/edit_text" />

        <TextView
            android:text="Author"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/authorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Night Waking"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:id="@+id/nightWakingToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Yes"
            android:textOff="No"
            android:layout_marginBottom="12dp" />


        <TextView
            android:text="Activity Limits"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:id="@+id/activityToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Limited"
            android:textOff="No Limits"
            android:layout_marginBottom="12dp" />


        <TextView
            android:text="Cough / Wheeze"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:id="@+id/coughWheezeToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Present"
            android:textOff="None"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Triggers"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/triggerContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp">

            <CheckBox
                android:id="@+id/triggerExercise"
                android:text="Exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/triggerColdAir"
                android:text="Cold Air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/triggerDustPets"
                android:text="Dust / Pets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/triggerSmoke"
                android:text="Smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/triggerIllness"
                android:text="Illness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/triggerPerfume"
                android:text="Perfume / Cleaners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="Notes (optional)"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/notesInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:hint="Notes..." />

    </LinearLayout>

</ScrollView>
